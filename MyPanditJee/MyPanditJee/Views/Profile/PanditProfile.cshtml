@model MyPanditJee.Models.PanditProfileModel

@{
    ViewData["Title"] = "PanditProfile";

}



<style>
    #btnProfile {
        display: none;
    }

    #useredit {
        display: none;
    }
</style>
@{
    <link href="~/fontawesome/css/all.css" rel="stylesheet" />
}
<button id="btnEdit" class="btn btn-primary float-right" style="background: #54BAB9; color: #F7ECDE;">Edit profile</button>
<button id="btnProfile" class="btn btn-danger ">Back to Profile</button>
<div id="userdetails">
    <div class="container">
        <div class="panel-body inf-content">
            <h1> @Html.DisplayFor(model => model.Name)</h1>
            

