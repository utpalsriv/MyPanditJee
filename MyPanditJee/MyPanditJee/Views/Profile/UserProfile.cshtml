<div id="useredit">
    <form asp-controller="Profile" asp-action="UserProfileEdit" method="post" class="container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-row ">

            @*<input type="hidden" name="Email" value="@Model.Email" />*@
            <div class="form-group col-md-4 ">
                <label for="inputEmail4 ">Name</label>
                <input asp-for="Name" type="text" class="form-control " id="inputEmail4 " placeholder="Name ">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4 ">
                <label for="Email">Email</label>
                <input asp-for="Email" type="email" class="form-control " id="email" disabled>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4 ">
                <label for="inputAdivress ">Mobile Number</label>
                <input asp-for="Phone" type="text" class="form-control " id="inputAdivress " placeholder="e.g: 9876543210 ">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row ">
            <div class="form-group col-md-5 ">
                <label class="required">Address Line 1</label><span asp-validation-for="Address1" class="text-danger"></span><input asp-for="Address1" type="text" class="form-control " id="inputAdivress " placeholder="1234 Main St " required>
            </div>
            <div class="form-group col-md-5 ">
                <label class="required">Address Line 2</label>
                <input asp-for="Address2" type="text" class="form-control " id="inputAdivress2 " placeholder="Apartment, studio, or floor ">
            </div>
        </div>
        <div class="form-row ">
            <div class="form-group col-md-2 ">
                <label>Pin code</label>
                <input asp-for="Pin" type="text" class="form-control " id="inputZip ">
                <span asp-validation-for="Pin" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4 ">
                <label>State</label>
                @Html.DropDownListFor(m => m.State, new SelectList(""), "--Select State--", new { @Id = "State", @class = "form-control" })
            </div>
            <div class="form-group col-md-6 ">
                <label>Country</label>
                @Html.DropDownListFor(m => m.Country, new SelectList(""), "--Select --", new { @Id = "Country", @class = "form-control" })
            </div>
        </div>

        <div class="form-group ">
            <button type="submit" class="btn btn-primary ">Update</button>
        </div>
    </form>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>



<style>
    #btnProfile {
        display: none;
    }

    #useredit {
        display: none;
    }
</style>

<script>
    $(document).ready(function () {
        $('#btnEdit').click(function () {
            $('#useredit').css("display", "block");
            $('#userdetails').hide();
            $('#btnEdit').hide();
            $('#btnProfile').css("display", "block");
        })
        $('#btnProfile').click(function () {
            $('#userdetails').show();
            $('#useredit').css("display", "none");
            $('#btnProfile').css("display", "none");
            $('#btnEdit').show();
        })
    })
</script>

